<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<AdminOrgName>xperiencecommunityexports</AdminOrgName>
	</PropertyGroup>
	<ItemGroup>
		<AdminClientPath Include="Client\dist\**">
			<ProjectName>web-admin</ProjectName>
		</AdminClientPath>
	</ItemGroup>
	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="CsvHelper" Version="33.1.0" />
		<PackageReference Include="kentico.xperience.admin" Version="30.8.0" />
	</ItemGroup>
  <PropertyGroup>
    <Title>Xperience by Kentico Exports</Title>
    <PackageId>XperienceCommunity.Exports</PackageId>
    <Version>0.0.0</Version>
    <Authors>Ben Quinlan</Authors>
    <PackageIcon>icon.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>kentico xperience mvc core export</PackageTags>
    <Description>
      Extension for Xperience by Kentico to enable the export of data through the administration interface.
    </Description>
    <RepositoryUrl>https://github.com/benquinlan-07/xperience-community-exports</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReadmeFile>docs\README.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\..\icon.png" Pack="true" PackagePath="" />
    <None Include="..\..\README.md" Pack="true" PackagePath="docs\" />
    <None Include="..\..\LICENSE.md" Pack="true" PackagePath="licenses\" />
  </ItemGroup>
</Project>